# Vahan Email Platform Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vahan_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vahan_db
DB_USER=vahan_user
DB_PASSWORD=your_secure_password

# Redis Configuration (for sessions and job queue)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# Application Configuration
APP_URL=http://localhost:3000
APP_ENV=development
APP_DEBUG=true

# Session Configuration
SESSION_TIMEOUT=24h
SESSION_CLEANUP_INTERVAL=1h

# AWS SES Configuration (for sending verification emails)
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_FROM_NAME=Vahan Email Platform

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# DNS Providers API Keys (optional)
CLOUDFLARE_API_TOKEN=
ROUTE53_ACCESS_KEY=
ROUTE53_SECRET_KEY=

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=

# Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com
